<% content_for :js do %>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google[:client_api] %>&callback=initMap" async defer></script>
<% end %>

<h1>Resorts</h1>

<div id="map" style="height:350px;width:100%;">
</div>

<script type="text/javascript">
  var map;

  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: { lat: 38.8697, lng: -106.988 },
      zoom: 8
    });
  }
</script>
